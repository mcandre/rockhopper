    -v "$(pwd):/src" \
    n4jm4/rockhopper:arch \
    --name hello \
    --version 1.0.0 \
    --arch any \
    --maintainer "Bob <bob@bobsautoparts.test>" \
    --description "greeter" \
    --summary "greeter" \
    --license 0BSD \
    --release 1 \
    --changelog-file changelog.txt \
    --url https://bobsautoparts.test/

