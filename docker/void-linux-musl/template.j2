pkgname={{ ROCKHOPPER_NAME }}
version={{ ROCKHOPPER_VERSION }}
revision={{ ROCKHOPPER_REV }}
short_desc="{{ ROCKHOPPER_SUMMARY }}"
maintainer="{{ ROCKHOPPER_MAINTAINER }}"
license="{{ ROCKHOPPER_LICENSE }}"
homepage="{{ ROCKHOPPER_URL }}"
depends="{{ ROCKHOPPER_DEPENDENCIES | default('') }}"
{% if ROCKHOPPER_CHANGELOG is defined %}
changelog="{{ ROCKHOPPER_CHANGELOG }}"
{% endif %}
{% if ROCKHOPPER_ARCH == 'noarch' %}
noarch="yes"
{% else %}
archs="{{ ROCKHOPPER_ARCH }}"
{% endif %}

pre_install() {
    {{ XBPS_PRE_INSTALL }}
}

do_install() {
    vlicense licenses/LICENSE
    {{ XBPS_PACKAGE }}
}
