<?xml version="1.0" encoding="utf-8"?>
<installer-script minSpecVersion="1.000000" authoringTool="com.apple.PackageMaker" authoringToolVersion="3.0.3" authoringToolBuild="174">
    <title>{{ rocklet_name }}</title>
{% if rocklet_copyright != '' or rocklet_license != '' %}    <license file="license.html" mime-type="text/html" />{% endif %}
    <options customize="never" allow-external-scripts="no" />
    <domains enable_anywhere="true" />
    <domains enable_localSystem="true" />
    <choices-outline>
        <line choice="choice1" />
    </choices-outline>
    <choice id="choice1" title="base">
        <pkg-ref id="{{ rocklet_identifier }}.base.pkg" />
    </choice>
    <pkg-ref id="{{ rocklet_identifier }}.base.pkg" installKBytes="{{ metrics_kb }}" version="{{ rocklet_version }}" auth="Root">#base.pkg</pkg-ref>
</installer-script>
