<?xml
    version="1.0"

    encoding="UTF-8"
    {# encoding="UTF-16" #}
    {# windows-1252 #}
?>
<Wix
    {# xmlns="http://wixtoolset.org/schemas/v4/wxs" #}
    xmlns="http://schemas.microsoft.com/wix/2006/wi"
>
    <Product
        Name="{{ ROCKHOPPER_NAME}}"
        Id="{{ ROCKHOPPER_PRODUCT_CODE }}"
        UpgradeCode="{{ ROCKHOPPER_UPGRADE_CODE }}"
        Language="{{ ROCKHOPPER_LCID }}"
        Codepage="65001"
        {# Codepage="1252" #}
        Version="{{ ROCKHOPPER_VERSION }}"
        Manufacturer="{{ ROCKHOPPER_MANUFACTURER }}"
    >
        <Package
            Id="*"
            Keywords="Installer"
            Description="{{ ROCKHOPPER_SUMMARY }}"
            Manufacturer="{{ ROCKHOPPER_MANUFACTURER }}"
            {# InstallerVersion="100" #}
            Languages="{{ ROCKHOPPER_LCID }}"
            Compressed="yes"
            SummaryCodepage="65001"
            {# SummaryCodepage="1252" #}
        />
        <Media
            Id="1"
            Cabinet="Sample.cab"
            EmbedCab="yes"
            DiskPrompt="CD-ROM #1"
        />
        <Property
            Id="DiskPrompt"
            Value="{{ ROCKHOPPER_NAME }} {{ ROCKHOPPER_VERSION }} Installation [1]"
        />
        <Feature
            {# Id="Main" #}
            Id="Complete"
            Level="1"
        />

        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFilesFolder" Name="PFiles">
                <Directory Id="INSTALLDIR" Name="{{ ROCKHOPPER_NAME }}">
                    {{ MSI_COMPONENTS }}
                </Directory>
            </Directory>
        </Directory>
    </Product>
</Wix>
